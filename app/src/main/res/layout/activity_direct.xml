<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    tools:context="com.example.vmac.WatBot.DirectActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:src="@drawable/logo_inicio"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:textSize="16sp"
        android:text="Bem vindo ao MUH! A plataforma que\nmelhora a qualidade do leite\ndesde a ordenha atÃ© a mesa do consumidor"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3">


        <ImageButton
            android:id="@+id/btn_produtor"
            android:layout_width="0dp"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/produtor_on"/>


        <ImageButton
            android:id="@+id/btn_consumidor"
            android:layout_width="0dp"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:background="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/consumidor"/>


    </LinearLayout>


</LinearLayout>
